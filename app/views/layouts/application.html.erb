<!-- Common details for all pages of the application -->

<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">Flixter</a>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">

          <li class="nav-item">
            <a class="nav-link" href="#">See all Classes</a>
          </li>
        </ul>
        <ul class="navbar-nav"> <!-- begin display if user is logged in -->
          <% if user_signed_in? %>
          <li class="nav-item"> <!-- If the user is present, display sign out button -->
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <% else %>
          <li class="nav-item"> <!-- Button to sign in existing user -->
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item"> <!-- Button to sign up a new user -->
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
        <!-- End display if user is logged in -->
      </div>
    </nav>

<!--  Display alert boxes only when a notice is displayed -->
<% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

    <%= yield %>
  </div>
  <div id="footer">
    <div class="container">
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %> 
    </div>
  </div>
  </body>
</html>
